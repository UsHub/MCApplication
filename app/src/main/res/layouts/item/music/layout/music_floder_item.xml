<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/song_image_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.16"/>

            <android.support.constraint.Guideline
                android:id="@+id/song_floder_name_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.55"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/music_video"/>

            <TextView
                android:id="@+id/song_floder_name"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:text="歌曲文件夹名"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="@+id/song_image_line"/>

            <TextView
                android:id="@+id/floder_song_count"
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:gravity="center|left"
                android:text="文件夹内歌曲数量"
                android:paddingLeft="20dp"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="@+id/song_image_line"
                app:layout_constraintTop_toTopOf="@+id/song_floder_name_line"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>