<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="383dp"
        android:layout_height="40dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/floder_music_check_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.11"/>

            <android.support.constraint.Guideline
                android:id="@+id/floder_music_name_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.59"/>

            <CheckBox
                android:id="@+id/floder_music_check"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>

            <com.gameex.dw.mcapplication.otherClass.MarqueeTextView
                android:id="@+id/floder_music_name"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="the song"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/floder_music_check_line"/>

            <TextView
                android:id="@+id/floder_music_singer_name"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="the singer"
                android:textColor="#ccc"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@+id/floder_music_check_line"
                app:layout_constraintTop_toTopOf="@+id/floder_music_name_line"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>