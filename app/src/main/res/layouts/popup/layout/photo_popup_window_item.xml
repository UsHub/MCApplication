<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="382dp"
        android:layout_height="80dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/photo_popup_image_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.23"/>

            <android.support.constraint.Guideline
                android:id="@+id/photo_popup_text_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.67"/>

            <ImageView
                android:id="@+id/photo_floder_first_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintRight_toLeftOf="@+id/photo_popup_image_line"/>

            <TextView
                android:id="@+id/photo_floder_name"
                android:layout_width="295dp"
                android:layout_height="55dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="测试"
                android:textSize="20dp"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="@+id/photo_popup_image_line"/>

            <TextView
                android:id="@+id/photo_floder_image_count"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="50dp"
                android:text="测试"
                android:textColor="#ccc"
                app:layout_constraintLeft_toLeftOf="@+id/photo_popup_image_line"
                app:layout_constraintTop_toTopOf="@+id/photo_popup_text_line"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>